@model PJCAdmin.Models.Note

@{
    ViewBag.Title = "Job Note Details";
}

<h2>Viewing Job Note: <small style="color:#808080">@Html.DisplayFor(model => model.noteTitle)</small></h2>

<p>@Html.ActionLink("Back to all " + ViewData["user"] + " notes", "List", new { user = ViewData["user"] }) | @Html.ActionLink("Delete Note", "Delete", new { user = ViewData["user"], noteID = Model.noteID })</p>

<table>
    <tr>
        <th>Overview</th>
    </tr>
    <tr>
        <td>Made By:</td>
        <td>@ViewData["user"]</td>
    </tr>
    <tr>
        <td>Job title:</td>
        <td>@Html.DisplayFor(model => model.Jobs.First().Routine.routineTitle)</td>
    </tr>
    <tr>
        <td>Description:</td>
        <td>@Html.DisplayFor(model => model.noteMessage)</td>
    </tr>
</table>
